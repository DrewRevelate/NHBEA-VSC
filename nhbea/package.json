{
  "name": "nhbea",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:preview": "npm run build && firebase hosting:channel:deploy preview",
    "brand:validate": "node scripts/brand-validation-runner.js",
    "brand:accessibility-check": "jest --testPathPattern=brand --testNamePattern=\"Accessibility\"",
    "brand:performance-test": "jest --testPathPattern=brand --testNamePattern=\"Performance\"",
    "brand:visual-regression": "jest --testPathPattern=brand --testNamePattern=\"Visual Regression\"",
    "brand:cross-browser-test": "playwright test --config=playwright.config.ts",
    "brand:security-scan": "jest --testPathPattern=brand --testNamePattern=\"Security\"",
    "brand:full-suite": "node scripts/brand-validation-runner.js",
    "brand:ci": "npm run lint && npm run test && npm run brand:validate && npm run build",
    "playwright": "playwright test",
    "playwright:headed": "playwright test --headed",
    "playwright:ui": "playwright test --ui",
    "test:components": "jest --testPathPattern=components --coverage",
    "test:e2e": "playwright test __tests__/e2e",
    "test:visual": "playwright test __tests__/e2e/component-visual-regression.spec.ts",
    "test:accessibility": "playwright test __tests__/e2e/accessibility-compliance.spec.ts",
    "test:full-suite": "npm run lint && npm run test:components && npm run build && npm run test:e2e",
    "test:ci": "npm run lint && npm run test -- --coverage --watchAll=false && npm run build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.0",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "firebase": "^12.0.0",
    "firebase-admin": "^13.4.0",
    "next": "15.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.61.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.2",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "playwright": "^1.49.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  }
}
